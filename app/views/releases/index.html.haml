.container
  %h1.title RELEASES
  #timeline
    - @releases.reverse_each do |r|
      .timeline-item
        .timeline-icon
        .timeline-ago
          %span.timestring{datetime: r.release_date_time.to_formatted_s(:iso8601)}
            = "#{time_ago_in_words(r.release_date_time)} ago"
        .timeline-content
          %h2
            = link_to(r.project, r.project_url)
            = link_to(r.version, r.release_url)
